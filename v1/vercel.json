{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "config.js", "use": "@vercel/static" },
    { "src": "api/**/*.py", "use": "@vercel/python", "config": { "runtime": "python3.11" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.py" },
    { "src": "/config.js", "dest": "/config.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
